rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admin docs: read for authenticated users, writes only for admin claims
    match /admin_docs/{docId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Public collections can be added below
    match /{document=**} {
      allow read: if true;
    }
  }
}